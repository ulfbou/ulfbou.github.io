@using MudBlazor
@using Homepage.Common.Models


<MudCard @onclick="async () => await OnClick.InvokeAsync()" Class="d-flex align-center justify-center mud-width-full pa-6 ma-6">
    <MudCardContent>
        <MudText Typo="Typo.h3">@Content.Title</MudText>
        <MudText Typo="Typo.body2" Class="text-brown-default">@Content.Summary</MudText>
        <MudText Typo="Typo.body2" Class="text-brown-darken1">Published: @Content.Date</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Outlined" OnClick="async () => await OnClick.InvokeAsync()">Read More</MudButton>
    </MudCardActions>
</MudCard>
