@using Homepage.Common.Services
@using MudBlazor
@using System.ComponentModel.DataAnnotations
@using static Homepage.Common.Services.ThemeManager
@inherits LayoutComponentBase

<HeadContent> @FontLink </HeadContent>

<MudThemeProvider Theme="@Theme" IsDarkMode="@IsDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<MudLayout>
    <MudAppBar Class="mb-6">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleNavMenu" />
        Homepage
        <MudChip Variant="Variant.Outlined" Color="Color.Secondary" OnClick="@(() => ToggleTheme())" T="string">
            <MudIcon Icon="@(IsDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)" />
            Switch to @(IsDarkMode ? "Light" : "Dark") Mode
        </MudChip>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Class="mr-6">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>
