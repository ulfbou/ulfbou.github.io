{
    "metadata": [
	{
	    "src": [
		{
		    "files": ["**/*.md"],
		    "exclude": ["obj/**", "_site/**"],
		    "src": "docs"
		}
	    ],
	    "dest": "obj/api"
	}
    ],
    "build": {
	"content": [
	    {
		"files": ["**/*.md"],
		"src": "docs"
	    }
	],
	"resource": [
	    {
		"files": ["**/*.{png,jpg,jpeg,gif,svg}", "**/*.json"],
		"src": "assets"
	    }
	],
	"overwrite": [
	    {
		"files": ["**/*.overwrite.md"]
	    }
	],
	"globalMetadata": {
	    "_appTitle": "Knowledge Hub",
	    "_enableSearch": true,
	    "_appFooter": "\u00A9 2025 Ulf Bourelius. All rights reserved.",
	    "_enableNewTab": true
	},
	"template": ["default", "themes/custom"],
	"dest": "_site",
	"xref": [],
	"sitemap": {
	    "baseUrl": "https://ulfbou.github.io/",
	    "priority": 0.5,
	    "changefreq": "weekly"
	}
    }
}
